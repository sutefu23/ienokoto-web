---
export type Props = {
  title: string;
};
const { title } = Astro.props;
---

<section class="page_copy">
  <h2 class="copy_title">
    {title}
  </h2>
  <p class="copy_content">
    <slot />
  </p>
</section>
<style lang="scss">
  .copy_title {
    margin-top: 171px;
  }
  .copy_content {
    text-align: center;
    margin-top: 119px;
    line-height: 2.5;
  }
  @media screen and (max-width: $mobileBreakPoint) {
    .page_copy {
      line-height: vw(30px);
      padding: 0 vw(35px);
    }
    .copy_title {
      margin-top: vw(61px);
    }
    .copy_content {
      line-height: vw(30px);
      margin-top: vw(45px);
    }
  }
</style>
