---
import useWPApi from "~/hooks/useWPApi";
import dayjs from "dayjs";
import ja from "dayjs/locale/ja";
dayjs.locale(ja);
const { fetchPosts } = useWPApi();
const Posts = await fetchPosts("news", { per_page: 3 });
if (!Posts) return;
---

<section class="news_list">
  <h3>お知らせ</h3>
  <ul>
    {
      Posts.map((post) => (
        <li>
          <a href={post.link} class="news_line">
            <time>
              {dayjs(post.date).format("YYYY")}年<br class="sp" /><!--
                 -->{dayjs(post.date).format("MM月DD")}
            </time>
            <p>{post.title.rendered}</p>
          </a>
        </li>
      ))
    }
  </ul>
  <a href=`${Astro.site}/news` class="more">＞＞もっと見る</a>
</section>
<style lang="scss">
  .news_list {
    max-width: 420px;
    margin: auto;
    text-align: center;
  }
  h3 {
    margin-bottom: 104px;
  }
  ul {
    text-align: left;
  }
  li + li {
    margin-top: 47px;
  }
  .news_line {
    display: grid;
    grid-template-columns: 119px 1fr;
    column-gap: 53px;
  }
  time {
  }
  .more {
    display: inline-block;
    margin-top: 78px;
  }
  @media screen and (max-width: $mobileBreakPoint) {
    .news_list {
      max-width: vw(270px);
    }
    .news_line {
      column-gap: vw(40px);
    }
  }
</style>
