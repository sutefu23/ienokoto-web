---
import useWPApi from "~/hooks/useWPApi";
import { Image } from "@astrojs/image/components";
import dayjs from "dayjs";
import ja from "dayjs/locale/ja";
dayjs.locale(ja);
const { fetchPosts } = useWPApi();
const Events = await fetchPosts("events", { per_page: 3 });
if (!Events) return;

export type Props = {
  title?: string;
};

const { title } = Astro.props;
---

<section class="event_list">
  <h3>{title || "講座・イベント"}</h3>
  <ul>
    {
      Events.map((post) => (
        <li>
          <a href={post.link}>
            <Image
              src={post._embedded["wp:featuredmedia"][0].source_url}
              width={322}
              height={322}
              format="webp"
              loading={"lazy"}
              alt={post.title.rendered}
            />
            <time>{dayjs(post.date).format("YYYY年MM月DD日(dd)")}</time>
            <p>{post.title.rendered}</p>
          </a>
        </li>
      ))
    }
  </ul>
  <a href=`${Astro.site}/events` class="more">＞＞もっと見る</a>
</section>
<style lang="scss">
  .event_list {
    max-width: $baseContentWidth;
    margin-left: auto;
    margin-right: auto;
  }
  h3 {
    margin-bottom: 111px;
  }
  ul {
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    margin-top: 104px;
  }
  li {
    @media screen and (max-width: 1300px) {
      width: vw(322px, 1000px);
    }
  }
  img {
    margin-bottom: 30px;
  }
  a:hover {
    opacity: 0.72;
  }
  time {
    display: block;
    margin-bottom: 0px;
    line-height: 1.875;
    margin-right: 53px;
  }
  p {
    line-height: 1.875;
  }
  .more {
    text-align: right;
    display: block;
    margin-top: 62px;
  }
</style>
