---
import { Image } from "@astrojs/image/components";
const Events = [
  {
    id: 1,
    title: "エンディングノートワークショップ",
    date: "2023年2月10日（金）",
    url: "http://www.example.com/",
    image: "https://placehold.jp/322x322.png",
  },
  {
    id: 2,
    title: "ちょこっと片付けのススメ",
    date: "2023年2月21日（火）",
    url: "http://www.example.com/",
    image: "https://placehold.jp/322x322.png",
  },
  {
    id: 3,
    title: "リクシル福岡　小さく豊かに暮らす",
    date: "2023年2月22日（水）",
    url: "http://www.example.com/",
    image: "https://placehold.jp/322x322.png",
  },
];
---

<section class="event_list">
  <h3>講座・イベント</h3>
  <ul>
    {
      Events.map((post) => (
        <li>
          <a href={post.url}>
            <Image
              src={post.image}
              width={322}
              height={322}
              format="webp"
              loading={"lazy"}
              alt={post.title}
            />
            <time>{post.date}</time>
            <p>{post.title}</p>
          </a>
        </li>
      ))
    }
  </ul>
  <a href="/event" class="more">＞＞もっと見る</a>
</section>
<style lang="scss">
  .event_list {
    max-width: $baseContentWidth;
    margin-left: auto;
    margin-right: auto;
  }
  h3 {
    margin-bottom: 111px;
  }
  ul {
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    margin-top: 104px;
  }
  img {
    margin-bottom: 30px;
  }
  a:hover {
    opacity: 0.72;
  }
  time {
    display: block;
    margin-bottom: 13px;
    margin-right: 53px;
  }
  p {
    line-height: 1.875;
  }
  .more {
    text-align: right;
    display: block;
    margin-top: 62px;
  }
</style>
